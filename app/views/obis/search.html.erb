<%= render "share/header" %>

<div class="new-page">

  <div class="new-header">
    <h2 class="new-title">帯検索</h2>
  </div>

  <hr class="line">

  <div class="new-form">
    <%= search_form_for @p, url:  result_obis_path do |f| %>

      <div class="field">
        <div class="field-name">種類</div>
        <%= f.collection_select :obi_name_id_eq, ObiName.all, :id, :name,  {include_blank: '指定なし'}, {class:"pulldown-select"} %>
      </div>

      <div class="field">
        <div class="field-name">TPO</div>
        <%= f.collection_select :tpo_id_eq, Tpo.all, :id, :name,  {include_blank: '指定なし'}, {class:"pulldown-select"} %>
      </div>

      <div class="field">
        <div class="field-name">素材</div>
        <%= f.collection_select :material_id_eq, Material.all, :id, :name,  {include_blank: '指定なし'}, {class:"pulldown-select"} %>
      </div>

      <div class="field">
        <div class="field-name">時期<br />色柄<br />メモ</div>
        <%= f.search_field :season_or_color_pattern_or_memo_cont, class:"search-text" %>
      </div>

      <div class="new-submit">
        <%= f.submit '検索', class: 'goods-rgbtn' %>
      </div>

    <% end %>
  </div>
</div>
<%= render "share/footer" %>