<%= render "share/header" %>

<%= form_with model: @obi, url: obis_path, local: true do |f| %>
  <div class="goods-box">
    <div>帯をしまう</div>

    <%# <%= render "share/error_messages", model: f.object %> %>

    <div class="img-upload">
      <div>画像</div>
      <div class="click-upload">
        <p>クリックしてファイルをアップロード</p>
        <%= f.file_field :image, id:"goods-image" %>
      </div>
    </div>

    <div>種類</div>
    <%= f.collection_select(:obi_name_id, ObiName.all, :id, :name, {}, {class:"obi-name-select"}) %>

    <%= render partial: "share/form", locals: { f: f } %>

    <%= f.submit "タンスにしまう", class:"btn" %>
  </div>
<% end %>